[user]
    name = <user>
    email = <user@domain>
[core]
    longpaths = true
    autocrlf = false
    pager = less -F -X
[push]
    default = simple
[diff]
    tool = /usr/bin/vimdiff
[difftool]
    prompt = false
[alias]
	diffns = diff --name-status
	tgree = log --oneline --decorate=full --all --graph
	hist = log --pretty=format:\"%h %ad | %s%d [%an}\" --graph --date=short
